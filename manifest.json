{
  "manifest_version": 3,
  "name": "前端工具库",
  "version": "1.0.0",
  "description": "常用前端开发工具集合，包含字段翻译、Base64编码、JSON格式化、二维码生成等功能",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.mymemory.translated.net/*",
    "https://libretranslate.com/*",
    "https://fanyi-api.baidu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "前端工具库",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
